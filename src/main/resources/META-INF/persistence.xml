<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_1.xsd"
  version="3.1">
  <persistence-unit name="ChatsPU-Local" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

    <class>com.sim.chatserver.model.UserAccount</class>
    <class>com.sim.chatserver.model.Chat</class>
    <class>com.sim.chatserver.model.AdminSettings</class>

    <properties>
      <!-- No default JDBC driver/url so the AppDataSourceHolder overrides everything -->
      <property name="hibernate.hbm2ddl.auto" value="none" />
      <property name="hibernate.show_sql" value="false" />
      <property name="hibernate.format_sql" value="false" />
    </properties>
  </persistence-unit>
</persistence>